<article>
  <header>
    <h1><%= @project.name %></h1>
    <%= image_for(@project) %>
  </header>
  <h2>Description</h2>
  <p>
    <%= @project.description %>
  </p>
  <h3>Target pledge amount:</h3>
  <p>
    <%= number_to_currency(@project.target_pledge_amount) %>
  </p>
  <h3>Pledging ends on:</h3>
  <p>
    <%= format_date(@project) %>
  </p>
  <h3>Website:</h3>
  <p>
    <%= @project.website %>
  </p>
  <h3>Team members</h3>
  <p>
    <%= @project.team_members %>
  </p>
</article>

<nav>
  <%= link_to "All projects", projects_path %>
  <%= link_to "Edit", edit_project_path(@project) %>
  <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure?" } %> 
</nav>
