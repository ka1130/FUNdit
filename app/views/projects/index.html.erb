<% content_for :hero do %>
  <section class="hero">
    <h2>Give a bit.<br/><br/>Change a&nbsp;lot</h2>
  </section>
<% end %>

<h3 class="projects-header"><%= pluralize(@projects.size, 'Project') %></h3>

<section class="all-projects">
  <% @projects.each do |project| %>
    <%= link_to(project, class: 'project-section-link') do %>
      <div class="project-wrapper">
        <header style="background-image: url(<%= image_for(project) %>)">
          <div class="project-title">
            <h3><%= project.name %></h3>
          </div>
        </header>
        <p class="project-description">&mdash; <%= truncate(project.description, length: 150, separator: ' ') %></p>
        <p class="learn-more">Learn more</p>
      </div>
    <% end %>
  <% end %>
</section>