<header>
  <h1>New Pledge for <%#= link_to @pledge.name, project_pledge_path(@pledge) %></h1>
</header>

<%= form_for [@project, @pledge] do |f| %>
  <%= render "shared/errors", object: @pledge %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>         
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>         
        <%= f.text_field :email, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :amount %>
        <%= f.select :amount, Pledge::AMOUNT_LEVELS, prompt: "Pick one" %>   
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "Leave an optional comment" %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Create Pledge' %> 
      <%= link_to "Cancel", @project %>
    </p>
  </fieldset>
<% end %>